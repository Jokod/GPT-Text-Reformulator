{
  "manifest_version": 3,
  "name": "GPT Text Reformulator",
  "version": "1.0",
  "description": "Reformule le texte avec ChatGPT",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "icons/icon.png"
    }
  },
  "icons": {
    "48": "icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "utils/constants.js",
        "content/content.js"
      ],
      "css": ["content/content.css"]
    }
  ],
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "web_accessible_resources": [{
    "resources": [
      "utils/*.js",
      "content/*.js",
      "icons/*.svg"
    ],
    "matches": ["<all_urls>"]
  }]
}
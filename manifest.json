{
  "manifest_version": 3,
  "name": "GPT Text Reformulator",
  "version": "1.1.3",
  "version_name": "1.1.3-dev",
  "description": "Reformule le texte avec ChatGPT",
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus"
  ],
  "action": {
    "default_popup": "src/ui/popup/popup.html",
    "default_icon": {
      "48": "src/assets/icons/icon.png"
    }
  },
  "icons": {
    "48": "src/assets/icons/icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/content/content.js"
      ],
      "css": [
        "src/content/content.css"
      ],
      "type": "module"
    }
  ],
  "background": {
    "service_worker": "src/background/background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/core/*.js",
        "src/ui/*.js",
        "src/utils/*.js",
        "src/services/**/*.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
